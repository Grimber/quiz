@model Quiz.Models.CreateQuestionViewModel

@{
    ViewBag.Title = "CreateQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CreateQuestion", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Create a new question</h4>
    <hr />
    <p class="text-success">@ViewBag.StatusMessage</p>

    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.Text)
        @Html.TextAreaFor(m => m.Text, 15, 5, new { @class = "form-control" })
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.СheckPattern)
        @Html.TextAreaFor(m => m.СheckPattern, 15, 5, new { @class = "form-control" })
    </div>
    <div class="form-group col-md-12" style="margin-right: 2px;">
        @Html.LabelFor(m => m.Universities)
        @Html.DropDownList("Universities", ViewBag.Universities as SelectList,
                   new { id = "university", @class = "form-control"})
    </div>
    <div class="form-group col-md-12" style="margin-right: 2px;">
        @Html.LabelFor(m => m.Groups)
        @Html.ListBox("Groups", ViewBag.Groups as SelectList,
              new { id = "group", @class = "form-control"})
    </div>
    <div class="form-group col-md-12" style="margin-right: 2px;">
        <input type="submit" class="btn btn-default" value="Send" />
    </div>
}
<div class="push"></div>

@section Scripts {
    @Scripts.Render("~/Scripts/quiz.js")
}


