@using Quiz.Models
@model CheckAnswerViewModel
@{
    ViewBag.Title = "CheckAnswer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CheckAnswer", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>@Model.QuestionName</h4>
    <hr />
    <p class="text-success">@ViewBag.StatusMessage</p>

    <div>
        @Html.HiddenFor(m => m.QuestionAnswerId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.QuestionText, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <p>@Model.QuestionText </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Answer, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <p>@Model.Answer </p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.QuestionСheckPattern, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <p>@Model.QuestionСheckPattern </p>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="star-rating">
                <input id="star-5" type="radio" name="Mark" value="5">
                <label for="star-5" title="5 stars">
                    <i class="active fa fa-star" aria-hidden="true"></i>
                </label>
                <input id="star-4" type="radio" name="Mark" value="4">
                <label for="star-4" title="4 stars">
                    <i class="active fa fa-star" aria-hidden="true"></i>
                </label>
                <input id="star-3" type="radio" name="Mark" value="3">
                <label for="star-3" title="3 stars">
                    <i class="active fa fa-star" aria-hidden="true"></i>
                </label>
                <input id="star-2" type="radio" name="Mark" value="2">
                <label for="star-2" title="2 stars">
                    <i class="active fa fa-star" aria-hidden="true"></i>
                </label>
                <input id="star-1" type="radio" name="Mark" value="1">
                <label for="star-1" title="1 star">
                    <i class="active fa fa-star" aria-hidden="true"></i>
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
}
