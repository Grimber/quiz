@using Quiz.Models
@model QuestionAnswer
@{
    ViewBag.Title = "AnswerQuestionForMe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AnswerQuestionForMe", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h2>@Model.Question.Name</h2>
    <hr />
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        @Html.HiddenFor(qa => qa.Id)
        @Html.HiddenFor(qa => qa.QuestionId)
        @Html.HiddenFor(qa => qa.UserId)
    </div>
    <div class="form-group">
        @Html.LabelFor(qa => qa.Question.Text, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <p>@Model.Question.Text </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(qa => qa.Answer, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(qa => qa.Answer, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
}
